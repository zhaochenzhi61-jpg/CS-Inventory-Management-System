        <result property="shebeixinghao" column="shebeixinghao"/>
        <result property="shebeipinpai" column="shebeipinpai"/>
        <result property="shebeiguige" column="shebeiguige"/>
        <result property="shebeizongshu" column="shebeizongshu"/>
        <result property="jiechushuliang" column="jiechushuliang"/>
        <result property="keyongshuliang" column="keyongshuliang"/>
