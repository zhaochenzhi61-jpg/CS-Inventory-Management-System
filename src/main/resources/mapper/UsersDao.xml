<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.UsersDao">

	<!-- 可根据自己的需求，SURE要使用 -->
    <resultMap type="com.entity.UsersEntity" id="usersMap">
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="role" column="role"/>
        <result property="image" column="image"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.UsersVO" >
		SELECT * FROM users  users         
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.UsersVO" >
		SELECT  users.* FROM users  users 	
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.UsersView" >

		SELECT  users.* FROM users  users 	        
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.UsersView" >
		SELECT * FROM users  users <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	


</mapper>
